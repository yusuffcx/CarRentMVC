@model IEnumerable<CarRent.Models.ViewModels.VehicleDetail>

@{
    ViewBag.Title = "CarDetails";
}

<h2>Araç Bilgileri</h2>

@foreach (var item in Model)
{
<div class="d-grid gap-3">
    <img src="@Url.Content(item.ImagePath)" style="width:500px" class="rounded" alt="...">

    <ul class="list-group">

        <li class="list-group-item">
            <strong>Marka</strong>&nbsp;
            <span>@item.Brand&nbsp;</span>
        </li>
        <li class="list-group-item">
            <strong>Model</strong>&nbsp;
            <span>@item.Model&nbsp;</span>
        </li>

        <li class="list-group-item">
            <strong>Plaka</strong>&nbsp;
            <span>@item.LicensePlate&nbsp;</span>
        </li>

        <li class="list-group-item">
            <strong>Model Yılı</strong>&nbsp;
            <span class="">@item.Year</span>
        </li>
        <li class="list-group-item">
            <strong>Yakıt</strong>&nbsp;
            <span class="">
                @item.FuelType
            </span>
        </li>
        <li class="list-group-item">
            <strong>Vites</strong>&nbsp;
            <span class="">@item.TransmissionType</span>
        </li>

        <li class="list-group-item">
            <strong>KM</strong>&nbsp;
            <span class="">@item.MileAge</span>
        </li>
        <li class="list-group-item">
            <strong>Renk</strong>&nbsp;
            <span class="">
                @item.Color
            </span>
        </li>

        <li class="list-group-item">
            <strong>Kiralayan Şirket Adı</strong>&nbsp;
            <span class="">
                @item.CompanyName
            </span>
        </li>

        <li class="list-group-item">
            <strong>Günlük Ücret</strong>&nbsp;
            <span class="">
                @item.DailyRate
            </span>
        </li>
    </ul>
    <div class="d-flex justify-content-end gap-3">

        <a href="@Url.Action("Rezervation", "Car", new { Id = item.VehicleID})" class="btn btn-primary">Rezervasyon Oluştur</a>
    </div>
</div>
}

